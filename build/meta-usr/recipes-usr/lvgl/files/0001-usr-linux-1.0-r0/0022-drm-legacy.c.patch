+#include <errno.h>
+#include <stdio.h>
+#include <string.h>
+#include <sys/select.h>
+#include <sys/ioctl.h>
+#include <linux/dma-buf.h>
+
+#include "common.h"
+#include "drm-common.h"
+#include "draw.h"
+
+static struct drm drm;
+
+static void page_flip_handler(int fd, unsigned int frame,
+		unsigned int sec, unsigned int usec, void *data)
+{
+	/* suppress 'unused parameter' warnings */
+	(void)fd, (void)frame, (void)sec, (void)usec;
+
+	int *waiting_for_flip = data;
+	*waiting_for_flip = 0;
+}
+
+static int legacy_run(const struct gbm *gbm, struct dumb_buf *dumb_buf)
+{
+	fd_set fds;
+	drmEventContext evctx = {
+		.version = 2,
+		.page_flip_handler = page_flip_handler,
+	};
+	struct gbm_bo *bo;
+	struct drm_fb *fb;
+	int64_t report_time, cur_time;
+	int ret, res;
+	uint32_t frame_cnt;
+	uint32_t p_frame_cnt;
+	struct dma_buf_sync sync_rq;
+
+	if (gbm != NULL) {
+		if (gbm->surface) {
+			bo = gbm_surface_lock_front_buffer(gbm->surface);
+		} else {
+			bo = gbm->bos[0];
+		}
+		fb = drm_fb_get_from_bo(bo);
+		if (!fb) {
+			fprintf(stderr, "Failed to get a new framebuffer BO\n");
+			return -1;
+		}
+	} else if(dumb_buf != NULL) {
+		fb = drm_fb_get_dumb_buf(dumb_buf, 0);
+
+		if (fb == NULL) {
+			fprintf(stderr, "Failed to get a dumb buffer\n");
+		}
+	}
+
+	/* set mode: */
+	ret = drmModeSetCrtc(drm.fd, drm.crtc_id, fb->fb_id, 0, 0,
+			&drm.connector_id, 1, drm.mode);
+	if (ret) {
+		printf("failed to set mode: %s\n", strerror(errno));
+		return ret;
+	}
+
+	report_time = get_time_ns();
+	p_frame_cnt = frame_cnt = 0;
+
+	while (frame_cnt < drm.count) {
+		struct gbm_bo *next_bo;
+		int waiting_for_flip = 1;
+
+		if (gbm != NULL) {
+
+			/* When using GBM issuing DMA_BUF_SYNC_START/END is
+			 * necessary to avoid artifacts */
+
+			sync_rq.flags = DMA_BUF_SYNC_START | DMA_BUF_SYNC_RW;
+
+			if ((res = ioctl(fb->buf_handle, DMA_BUF_IOCTL_SYNC, &sync_rq)) != 0) {
+				printf("Failed to sync buffer\n");
+				return -1;
+			}
+
+			draw_solid_color(fb);
+
+			sync_rq.flags = DMA_BUF_SYNC_END | DMA_BUF_SYNC_RW;
+
+			if ((res = ioctl(fb->buf_handle, DMA_BUF_IOCTL_SYNC, &sync_rq)) != 0) {
+				printf("Failed to sync buffer\n");
+				return -1;
+			}
+
+			if (gbm->surface) {
+				next_bo = gbm_surface_lock_front_buffer(gbm->surface);
+			} else {
+				next_bo = gbm->bos[frame_cnt % NUM_BUFFERS];
+			}
+
+			fb = drm_fb_get_from_bo(next_bo);
+			if (!fb) {
+				fprintf(stderr, "Failed to get a new framebuffer BO\n");
+				return -1;
+			}
+		} else if (dumb_buf != NULL) {
+
+			fb = drm_fb_get_dumb_buf(dumb_buf, frame_cnt % NUM_BUFFERS);
+
+			draw_solid_color(fb);
+
+			if (fb == NULL) {
+				fprintf(stderr, "Failed to get a dumb buffer\n");
+			}
+
+		} else {
+			fprintf(stderr, "Invalid arguments\n");
+		}
+
+		/*
+		 * Here you could also update drm plane layers if you want
+		 * hw composition
+		 */
+
+		ret = drmModePageFlip(drm.fd, drm.crtc_id, fb->fb_id,
+				DRM_MODE_PAGE_FLIP_EVENT, &waiting_for_flip);
+		if (ret) {
+			printf("failed to queue page flip: %s\n", strerror(errno));
+			return -1;
+		}
+
+		/* Wait for page flip to occur */
+		while (waiting_for_flip) {
+			FD_ZERO(&fds);
+			FD_SET(0, &fds);
+			FD_SET(drm.fd, &fds);
+
+			ret = select(drm.fd + 1, &fds, NULL, NULL, NULL);
+			if (ret < 0) {
+				printf("select err: %s\n", strerror(errno));
+				return ret;
+			} else if (ret == 0) {
+				printf("select timeout!\n");
+				return -1;
+			} else if (FD_ISSET(0, &fds)) {
+				printf("user interrupted!\n");
+				return 0;
+			}
+			drmHandleEvent(drm.fd, &evctx);
+		}
+
+		cur_time = get_time_ns();
+		if (cur_time > (report_time + 1 * NSEC_PER_SEC)) {
+			double elapsed_time = cur_time - report_time;
+			double secs = elapsed_time / (double)NSEC_PER_SEC;
+			uint32_t frame_delta = frame_cnt - p_frame_cnt;
+			printf("Rendered %u frames in %f sec (%f fps)\n",
+					frame_delta, secs, (double)frame_delta/secs);
+			report_time = cur_time;
+			p_frame_cnt = frame_cnt;
+		}
+
+		/* release last buffer to render on again: */
+		if (gbm != NULL && gbm->surface) {
+			gbm_surface_release_buffer(gbm->surface, bo);
+		}
+		bo = next_bo;
+
+		frame_cnt++;
+	}
+
+	return 0;
+}
+
+struct drm * init_drm_legacy(const char *device, const char *mode_str,
+		int connector_id, unsigned int vrefresh, unsigned int count)
+{
+	int ret;
+
+	ret = init_drm(&drm, device, mode_str, connector_id, vrefresh, count);
+	if (ret)
+		return NULL;
+
+	drm.run = legacy_run;
+
+	return &drm;
+}
